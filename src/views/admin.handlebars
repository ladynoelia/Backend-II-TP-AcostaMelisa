<div class="main">
  <h1 class="text-center">Formulario para agregar productos</h1>
  <div class="mb-3 form-control">
    <form
      id="addNewProduct"
      {{! action="http://localhost:8080/api/products" }}
      method="post"
      enctype="multipart/form-data"
    >
      <input
        class="form-control"
        type="text"
        name="title"
        placeholder="Nombre del producto"
        required
      />
      <input
        class="form-control"
        type="text"
        name="description"
        placeholder="Descripción"
        required
      />
      <input
        class="form-control"
        type="text"
        name="code"
        placeholder="Código"
        required
      />
      <input
        class="form-control"
        type="number"
        name="price"
        placeholder="Precio"
        required
      />
      <input
        class="form-control"
        type="text"
        name="status"
        placeholder="Estatus"
        required
      />
      <input
        class="form-control"
        type="number"
        name="stock"
        placeholder="Cantidad"
        required
      />
      <input
        class="form-control"
        type="text"
        name="category"
        placeholder="Categoría"
        required
      />
      <input class="form-control" type="file" name="file" required />
      <button class="btn btn-primary mb-3" type="submit">Agregar producto</button>
    </form>
  </div>
</div>