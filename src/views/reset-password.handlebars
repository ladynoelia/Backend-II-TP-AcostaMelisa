<div class="main">
  <h3>Restablecer la Contraseña</h3>
  <hr />
  <form action="/api/sessions/reset-password" method="post">
    <input type="hidden" name="token" value="{{token}}" />
    <label id="password">Nueva Contraseña
      <input class="form-control" type="password" name="newPassword" /><br />
    </label>
    <button class="form-control" type="submit">Confirmar</button>
  </form>
  <hr />
</div>