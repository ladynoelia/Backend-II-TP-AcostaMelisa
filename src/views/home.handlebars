<div class="main">
  <h1 class="text-center">¡Bienvenidos a FuwaFawa Paradise!</h1>
  <div class="row row-cols-1 row-cols-md-5 g-4">
    {{#each products}}
      <div class="col">
        <div class="card h-100" card>
          <div id="carousel-{{@index}}" class="carousel slide">
            <div class="carousel-inner">
              {{#each this.thumbnail}}
              <div class="carousel-item {{#if @first}}active{{/if}}">
                <img src="{{this}}" class="d-block w-100" alt={{this.title}} />
              </div>
              {{/each}}              
            </div>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carousel-{{@index}}"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carousel-{{@index}}"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.title}}</h5>            
            <p class="card-text">{{this.category}}</p>
            {{!-- <p class="card-text">Descripción: {{this.description}}</p> --}}
            <p class="card-text">Stock: {{this.stock}}</p>
            <p class="card-text">Precio: ${{this.price}}</p>
            <button class="btn btn-add-cart" data-pid="{{this.id}}">Agregar al carrito</button>            
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  {{!-- Paginación --}}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      {{!-- Botón anterior --}}
      {{#if prevLink}}
        <li class="page-item">
          <a class="page-link" href={{prevLink}} aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      {{else}}
        <li class="page-item disabled">
          <span class="page-link" >&laquo;</span>          
        </li>
      {{/if}}

      {{!-- Números de página --}}
      {{#each links}}
        <li class="page-item {{#if this.active}}active{{/if}}">
          <a class="page-link" href="{{this.link}}">{{this.text}}</a>
        </li>
      {{/each}}

      {{!-- Botón siguiente --}}
      {{#if nextLink}}
        <li class="page-item">
          <a class="page-link" href="{{nextLink}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      {{else}}
        <li class="page-item disabled">
          <span class="page-link">&laquo;</span>          
        </li>
      {{/if}}
    </ul>
  </nav>
  {{!-- <script src="/public/scripts/home.products.js"></script> --}}  
</div> 